{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/api/*": ["./api/*"],
      "@/client/*": ["./client/*"],
      "@/shared/*": ["./shared/*"],
      "@/components/*": ["./client/components/*"],
      "@/lib/*": ["./client/lib/*"],
      "@/hooks/*": ["./client/hooks/*"],
      "@/types/*": ["./shared/types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "api/**/*",
    "client/**/*",
    "shared/**/*"
  ],
  "exclude": ["node_modules"]
}
